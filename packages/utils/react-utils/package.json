{
  "name": "@hyper-next/react-utils",
  "version": "1.0.0",
  "description": "Utils for React components",
  "homepage": "https://hyper-next.com",
  "sideEffects": false,
  "author": {
    "email": "hi@hyper-next.com",
    "name": "hyper-next team",
    "url": "https://hyper-next.io"
  },
  "maintainers": [
    {
      "email": "hi@hyper-next.com",
      "name": "hyper-next team",
      "url": "https://hyper-next.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyper-next/hyper-next.git",
    "directory": "packages/utils/react-utils"
  },
  "bugs": {
    "url": "https://github.com/hyper-next/hyper-next/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nodemon --watch src --exec npm run build -e ts,tsx",
    "build": "concurrently npm:build:*",
    "build:esm": "cross-env BABEL_ENV=esm babel src --root-mode upward --extensions .ts,.tsx -d dist/esm --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --root-mode upward --extensions .ts,.tsx -d dist/cjs --source-maps",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "lint": "concurrently npm:lint:*",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../../.eslintrc",
    "lint:types": "tsc --noEmit",
    "test": "jest --config jest.config.js --passWithNoTests",
    "text:cov": "npm run test --coverage"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
  }
}
